generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ListeningTest {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  audioUrl  String? // <-- Make optional
  content   String? // <-- Make optional
  answers   Json? // <-- Make optional
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
